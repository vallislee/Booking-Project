<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs.b07.p3.Regispage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Last Name :"
        android:id="@+id/lstext"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lsinput"
        android:layout_below="@+id/lstext"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter your Last Name here"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="First Name :"
        android:id="@+id/fntext"
        android:layout_below="@+id/lsinput"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter your First Name here"
        android:ems="10"
        android:id="@+id/fninput"
        android:layout_below="@+id/fntext"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email :"
        android:id="@+id/emailtxt"
        android:layout_below="@+id/fninput"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/inputem"
        android:layout_below="@+id/emailtxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter your Email address here"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address"
        android:id="@+id/adtxt"
        android:layout_below="@+id/inputem"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/inputaddress"
        android:layout_below="@+id/adtxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter your address here"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date of Birth"
        android:id="@+id/datetxt"
        android:layout_below="@+id/inputaddress"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/inputdob"
        android:layout_below="@+id/datetxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter your date of birth here"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/cmpregisbtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Phone :"
        android:id="@+id/phonetxt"
        android:layout_below="@+id/inputaddress"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/inputph"
        android:layout_below="@+id/phonetxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter your phone number here"/>
</RelativeLayout>
